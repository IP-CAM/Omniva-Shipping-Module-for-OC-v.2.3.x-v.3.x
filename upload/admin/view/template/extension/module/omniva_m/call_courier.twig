<div class="form-horizontal">
    <div class="form-group">
        <label class="col-sm-2 control-label">{{ omniva_m_cc_available_time }}</label>
        <div class="col-sm-10">
            <div class="input-group" style="display: flex; align-items: center; justify-content: center; gap: 1em;">
                <select
                    name="omniva_m_cc_start" class="form-control">
                    {% for hour in timeRangeStart %}
                    <option value="{{ hour }}" {% if timeHourStart == hour %} selected {% endif %}>{{ hour }}</option>
                    {% endfor %}
                </select>
                <span>-</span>
                <select
                    name="omniva_m_cc_end" class="form-control">
                    {% for hour in timeRangeEnd %}
                    <option value="{{ hour }}" {% if timeHourEnd == hour %} selected {% endif %}>{{ hour }}</option>
                    {% endfor %}
                </select>
                <span>{{ timezone }}</span>
            </div>
            <p class="help-block">{{ omniva_m_cc_help_available_time }}</p>
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label">{{ omniva_m_cc_parcels }}</label>
        <div class="col-sm-10">
            <div class="input-group">
                <input type="text" name="omniva_m_cc_parcels" value="1" class="form-control" />
            </div>
            <p class="help-block">{{ omniva_m_cc_help_parcels }}</p>
        </div>
    </div>
</div>

{% if callTimes %}
<div class="alert alert-info">
    <label>{{ omniva_m_cc_label_called_times }}</label>
    <section>{{ callTimes }}</section>
</div>
{% endif %}